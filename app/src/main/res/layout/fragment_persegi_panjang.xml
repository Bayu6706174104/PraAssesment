<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".PersegiPanjangFragment">

    <EditText android:id="@+id/et_panjangPJ"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:width="250dp"
              android:hint="Tuliskan Panjang"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp"
              app:layout_constraintHorizontal_bias="0.488" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent"/>
    <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:width="250dp"
              android:hint="Tuliskan Lebar"
              android:id="@+id/et_lebarPJ"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/et_panjangPJ" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp"/>
    <Button
            android:text="Hitung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_hitungPJ" app:layout_constraintEnd_toEndOf="@+id/et_lebarPJ"
            app:layout_constraintStart_toStartOf="@+id/et_lebarPJ" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/et_lebarPJ" app:layout_constraintHorizontal_bias="0.493"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_luasPJ" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_hitungPJ" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="176dp" android:layout_marginStart="176dp"/>
    <TextView
            android:text="textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_kelilingPJ" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_luasPJ" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="176dp" android:layout_marginStart="176dp"/>
    <Button
            android:text="Share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sharePJ" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_lebarPJ" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="160dp" android:layout_marginStart="160dp"/>

</androidx.constraintlayout.widget.ConstraintLayout></layout>